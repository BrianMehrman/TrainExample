  <div class="row">
   <div class="col-md-12"> <h1>Listing trains</h1></div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-bordered" >
        <thead>
          <tr>
            <th>Train line</th>
            <th>Route</th>
            <th>Run number</th>
            <th>Operator</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @trains.each do |train| %>
            <tr>
              <td><%= train.train_line %></td>
              <td><%= train.route_name %></td>
              <td><%= train.run_number %></td>
              <td><%= train.operator_id %></td>
              <td><%= link_to "<i class='fa fa-eye'></i>".html_safe, train %>
                  <%= link_to "<i class='fa fa-pencil-square-o'></i>".html_safe, edit_train_path(train) %>
                  <%= link_to "<i class='fa fa-times'></i>".html_safe, train, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="row" ><%= link_to 'New Train', new_train_path, :class=>"btn btn-block btn-default" %></div>
      <div class="row">
        <%= form_for :train, url: import_trains_path, html:{id:"upload_form", class: "well"}  do |f| %>
            <span><%= label_tag 'upload csv' %><%= f.file_field 'upload_file', id: "upload_file" %></span>
          <% end %>
      </div>
    </div>
  </div>
